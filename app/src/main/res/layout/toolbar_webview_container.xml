<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/main_toolbar">

    <ImageButton
        android:id="@+id/toolbar_webview_container_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="14dp"
        android:background="@color/main_toolbar"
        android:src="@mipmap/back" />

    <TextView
        android:id="@+id/toolbar_webview_container_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/toolbar_webview_container_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:background="@color/main_toolbar"
        android:src="@mipmap/collection_unselected"/>

</RelativeLayout>